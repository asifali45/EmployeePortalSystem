@model EmployeePortalSystem.Models.Poll
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Create Poll";
    Layout = "~/Views/Shared/EmployeeLayout.cshtml";
    var currentDashboard = HttpContextAccessor.HttpContext.Session.GetString("CurrentDashboard");

}
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor


<div class="container">
    <div class="page-contents">
        <div class="container_emp">
            <div class="emp_btn">
                <div class="left_btn">
                    @if (currentDashboard == "Admin")
                    {
                        <form method="get" asp-action="PollDetails" asp-controller="Polls">
                            <button type="submit" class="create_emp_btn">Back</button>
                        </form>
                    }
                    else
                    {
                        <form method="get" asp-action="EmployeePollDetails" asp-controller="Polls">
                            <button type="submit" class="create_emp_btn">Back</button>
                        </form>
                    }
                </div>
            </div>
            <div class="emp_head">
                <h2>Create Poll</h2>
            </div>
        </div>

        <div class="container_emp mb-20">
            <div class="empmaster_card">
                <form asp-action="Create" asp-controller="Polls" method="post" class="emp_form">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form_row">
                        <div class="form_group">
                            <label>Poll Question <span class="imp_field">*</span></label>
                            <div class="val">
                                <input asp-for="Question" class="form-control" placeholder="Enter poll question" />
                                <span asp-validation-for="Question" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form_group">
                            <label>Option 3</label>
                            <div class="val">
                                <input asp-for="Option3" class="form-control" placeholder="Enter option 3 (optional)" />
                                <span asp-validation-for="Option3" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form_row">
                        <div class="form_group">
                            <label>Option 1 <span class="imp_field">*</span></label>
                            <div class="val">
                                <input asp-for="Option1" class="form-control" placeholder="Enter option 1" />
                                <span asp-validation-for="Option1" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form_group">
                            <label>Option 4</label>
                            <div class="val">
                                <input asp-for="Option4" class="form-control" placeholder="Enter option 4 (optional)" />
                            </div>
                        </div>
                    </div>

                    <div class="form_row">
                        <div class="form_group">
                            <label>Option 2 <span class="imp_field">*</span></label>
                            <div class="val">
                                <input asp-for="Option2" class="form-control" placeholder="Enter option 2" />
                                <span asp-validation-for="Option2" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form_row">
                       
                        @if (currentDashboard == "Admin")
                        {
                            @* <form method="get" asp-action="PollDetails" asp-controller="Polls"> *@
                                <button type="submit" class="custom-button">Submit</button>
                            @* </form> *@
                        }
                        else
                        {
                            @* <form method="get" asp-action="EmployeePollDetails" asp-controller="Polls"> *@
                                <button type="submit" class="custom-button">Submit</button>
                            @* </form> *@
                        }

                        <button type="reset" class="custom-button">Cancel</button>
                    </div>

                    @if (TempData["Message"] != null)
                    {
                        <div class="alert alert-success mt-2">
                            @TempData["Message"]
                        </div>
                    }
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
