@model EmployeePortalSystem.ViewModels.BlogViewModel
@{
    ViewData["Title"] = "Delete Blog";
    Layout = "~/Views/Shared/EmployeeLayout.cshtml";
}
<div class="container">
    <div class="empmaster_card">
        <div class="del_emp">
            <h3>Are you sure you want to delete blog: @Model.Title?</h3>
            <p>This action cannot be undone.</p>

            <div class="employee_deletion">
                <div class="left_del">

                    <form method="post" asp-action="BlogDeleteConfirmed" asp-controller="Blogs">

                        <input type="hidden" name="id" value="@Model.BlogId" />
                        <button type="submit" class="del_button">Delete</button>
                    </form>
                </div>
                <div class="right_cancel">


                    <form method="get" asp-action="BlogDetails" asp-controller="Blogs">

                        <button type="submit" class="cancel_button">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
