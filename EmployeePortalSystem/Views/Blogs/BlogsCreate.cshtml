@model EmployeePortalSystem.ViewModels.BlogViewModel

@{
    ViewData["Title"] = "Create Blog";
    Layout = "~/Views/Shared/EmployeeLayout.cshtml";
}

<div class="container">
    <div class="page-contents">
        <div class="container_emp">
            <div class="emp_btn">
                <div class="left_btn">
                    <form method="get" asp-action="EmployeeBlogDetails" asp-controller="Blogs">
                        <button type="submit" class="create_emp_btn">Back</button>
                    </form>
                </div>
            </div>
            <div class="emp_head">
                <h2>Create New Blog</h2>
            </div>
        </div>

        <div class="container_emp mb-20">
            <div class="empmaster_card">
                <form asp-action="BlogsCreate" asp-controller="Blogs" method="post" enctype="multipart/form-data" class="emp_form">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form_row">
                        <div class="form_group">
                            <input type="hidden" asp-for="BlogId" /> 

                            <label>Title<span class="imp_field">*</span></label>
                            <div class="val">
                                <input asp-for="Title" type="text" placeholder="Enter the Title here" class="form-control" />
                                <span asp-validation-for="Title" class="text-danger"></span> 
                            </div>

                        </div>
                        <div class="form_group">
                            <label>Content<span class="imp_field">*</span></label>
                            <div class="val">
                                <input asp-for="Content" type="text" placeholder="Enter the Content here" class="form-control" />
                                <span asp-validation-for="Content" class="text-danger"></span> 
                            </div>
                        </div>
                    </div>

                    <div class="form_row">
                        <div class="form_group">
                            <label>Tags<span class="imp_field">*</span></label>
                            <div class="val">
                                <input asp-for="Tags" type="text" placeholder="Enter the Tags here" class="form-control" />
                                
                            </div>
                        </div>
                        <div class="form_group">

                            <label>Photo</label>
                            <div class="val">
                                <input asp-for="ImageFile" type="file" accept=".png,.jpg,.jpeg" class="form-control" />
                               

                                @* @if (!string.IsNullOrEmpty(Model.Employee.Photo)) *@
                                @* { *@
                                @*     <div class="photo-preview"> *@
                                @*         <img src="@Model.Employee.Photo" alt="Employee Photo" class="employee-photo-frame" /> *@
                                @*     </div> *@
                                @* } *@
                            </div>
                        </div>

                    </div>




                    <div class="form_row">
                        <button type="submit" class="custom-button">Save</button>
                        <button type="reset">Cancel</button>
                    </div>
                    @if (TempData["Message1"] != null)
                    {
                        <div class="alert-success">
                            @TempData["Message1"]
                        </div>
                    }
                </form>
            </div>
        </div>



    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}