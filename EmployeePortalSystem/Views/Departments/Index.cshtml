@model List<EmployeePortalSystem.ViewModels.DepartmentViewModel>

@{
    ViewData["Title"] = "Department";
    Layout = "~/Views/Shared/EmployeeLayout.cshtml";
}

<div class="container">
    <div class="page-contents">

        <div class="container_emp mb-20">
            <div class="emp_head">
                <h3>Department List</h3>
            </div>

            <div class="create_btn_container mb-3">
                <form method="get" asp-action="Create" asp-controller="Departments">
                    <button type="submit" class="create_emp_btn">+ Add Department</button>
                </form>
            </div>

            <div class="empmaster_card">
                <div class="table-responsive">
                    <table class="emp_table table">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Department ID</th>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Head Name</th>
                                <th>Parent Department</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var dept in Model)
                            {
                                <tr>
                                    <td>
                                        <a href="@Url.Action("Edit", "Departments", new { id = dept.DepartmentId })" class="edit-icon">
                                            <img src="~/img/edit Icon.png" width="15px" height="15px" />
                                        </a>
                                    </td>
                                    <td>@dept.DepartmentId</td>
                                    <td>@dept.Name</td>
                                    <td>@dept.Description</td>
                                    <td>@dept.HeadName</td>
                                    <td>@dept.ParentDepartmentName</td>
                                    <td>
                                        @* <form asp-action="Delete" asp-controller="Departments" asp-route-id="@dept.DepartmentId" method="post" onsubmit="return confirm('Are you sure you want to delete this department?');" style="display:inline;"> *@
                                        @*     <button type="submit" class="btn btn-link p-0"> *@
                                        @*         <img src="~/img/delete_icon.png" width="15px" height="15px" /> *@
                                        @*     </button> *@
                                        @* </form> *@
                                        <a href="@Url.Action("Delete", "Departments", new { id = dept.DepartmentId })"
                                           onclick="return confirm('Are you sure you want to delete this department?');"
                                           title="Delete">
                                            <img src="~/img/trash-xmark (1).png" width="15px" height="15px" alt="Delete" />
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
