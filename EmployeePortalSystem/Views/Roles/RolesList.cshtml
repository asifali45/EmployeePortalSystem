@model List<EmployeePortalSystem.Models.Role>


@{
    ViewData["Title"] = "Roles List";
    Layout = "~/Views/Shared/EmployeeLayout.cshtml";
}

<div class="container">
    <div class="page-contents">

        <div class="container_emp mb-20">
            <div class="emp_btn">
                <div class="left_btn">
                    <form method="get" asp-action="DashboardAdmin" asp-controller="UserAccess">
                        <button type="submit" class="create_emp_btn">Back</button>
                    </form>
                </div>
                <div class="right_btn">
                    <form method="get" asp-action="CreateRole" asp-controller="Roles">
                        <button type="submit" class="create_emp_btn">Create new</button>
                    </form>
                </div>
            </div>
            <div class="emp_head">
                <h2>Job Roles</h2>
            </div>
            @if (TempData["Message8"] != null)
            {
                <div class="alert-message">
                    @TempData["Message8"]
                </div>
            }
            <div class="empmaster_card">
                <div class="table-responsive">
                    <table class="emp_table table">
                        <thead>
                            <tr>

                                <th>Role ID</th>
                                <th>Role Name</th>
                                <th>Created At</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var role in Model)
                            {
                                <tr>
                                    <td>@role.RoleId</td>
                                    <td>@role.RoleName</td>
                                    <td>@role.CreatedAt.ToString("dd-MM-yyyy")</td>
                                   
                                </tr>
                            }
                        </tbody>

                    </table>


                </div>
            </div>
        </div>

    </div>
</div>
