@model EmployeePortalSystem.Models.Role

@{
    ViewData["Title"] = "Add Role";
    Layout = "~/Views/Shared/EmployeeLayout.cshtml";
}

<div class="container">
    <div class="page-contents">

        <div class="container_emp">
            <div class="emp_btn">
                <div class="left_btn">
                    <form method="get" asp-action="RolesList" asp-controller="Roles">
                        <button type="submit" class="create_emp_btn">Back</button>
                    </form>
                </div>
            </div>
            <div class="emp_head">
                <h2>New Job Role</h2>
            </div>
        </div>

        <div class="container_emp mb-20">
            <div class="empmaster_card">
                <form asp-action="CreateRole" asp-controller="Roles" method="post" class="emp_form">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                   
                    <div class="form_row">
                        <div class="form_group">
                           
                            <label>Role Name<span class="imp_field">*</span></label>
                            <div class="role-input">
                              
                                <input asp-for="RoleName" type="text" placeholder="Enter the Name of the Job Role" class="form-control" width="100%"/> 
                                 <span asp-validation-for="RoleName" class="text-danger"></span> 
                            </div> 
                        </div>

                    </div>




                    <div class="form_row">
                        <button type="submit" class="custom-button">Save</button>
                        <button type="reset">Cancel</button>
                    </div>

                </form>
            </div>
        </div>



    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

