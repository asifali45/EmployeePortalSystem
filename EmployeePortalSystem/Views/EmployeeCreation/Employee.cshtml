@{
    ViewData["Title"] = "Employee";
    Layout = "~/Views/Shared/EmployeeLayout.cshtml";
}

<div class="container">
    <div class="page-contents">

        <div class="container_emp">
            <div class="emp_head">
                <h3>Employee Master</h3>
            </div>
        </div>

        <div class="container_emp mb-20">
            <div class="empmaster_card">
                <form asp-action="EmployeeMaster" asp-controller="Employee" method="post" class="emp_form">
                    <div class="form_row">
                        <div class="form_group">
                            <label>Name</label>
                            <input name="Name" type="text" placeholder="Enter the Employee Name here" />
                            @* <span asp-validation-for="EmployeeName" class="text-danger"></span> *@
                        </div>
                        <div class="form_group">
                            <label>Email</label>
                            <input name="Email" type="text" placeholder="Enter the Email of the Employee" class="dob-input" />
                            @* <span asp-validation-for="DateOfBirth" class="text-danger"></span> *@
                        </div>
                    </div>

                    <div class="form_row">
                        <div class="form_group">
                            <label>Phone</label>
                            <input tyoe="text" name="Phone" type="tel" placeholder="Enter the Phone number of the Employee" />
                            @* <span asp-validation-for="Age" class="text-danger"></span> *@
                        </div>
                        <div class="form_group">
                            <label>Designation</label>
                            <select name="Gender">
                                <option value="">Choose the Designation of the Employee</option>
                                <option>Software Engineer</option>
                                <option>HR Manager</option>
                                <option>Tester</option>
                                <option>Product Manager</option>
                                <option>Accountant</option>
                                <option>QA Analyst</option>
                                <option>DevOps Engineer</option>
                                <option>UI/UX Designer</option>
                                <option>IT Support</option>
                            </select>
                            @* <span asp-validation-for="Gender" class="text-danger"></span> *@
                        </div>
                    </div>
                    <div class="form_row">
                        <div class="form_group">
                            <label>Photo</label>
                            <input name="Photo" type="file" accept=".png, .jpg, .jpeg" placeholder="Recent Photo of the Employee" />
                            @* <span asp-validation-for="PhoneNumber" class="text-danger"></span> *@
                        </div>
                        <div class="form_group">
                            <label>Department</label>
                            <select name="Department">
                                <option value="">Choose the Department of the Employee </option>
                                <option>Human Resource</option>
                                <option>Software Development</option>
                                <option>UI/UX Design</option>
                                <option>Technical Support</option>
                                <option>Finance & Accounts</option>
                                <option>Marketing & Sales</option>
                                <option>Software Testing</option>
                                <option>Quality Assurance</option>
                                <option>Product Management</option>
                                <option>DevOps</option>
                            </select>
                            @* <span asp-validation-for="Gender" class="text-danger"></span> *@
                        </div>
                    </div>
                    <div class="form_row">
                        <div class="form_group">
                            <label>Role</label>
                            <select name="Department">
                                <option value="">Choose the Role of the Employee </option>
                                <option>Admin</option>
                                <option>Employee</option>
                            </select>
                        </div>
                        
                    </div>
                    

                    

                    <div class="form_row">
                        <button type="submit" class="custom-button">Save</button>
                        <button type="reset">Cancel</button>
                    </div>
                    @if (TempData["Message"] != null)
                    {
                        <div class="alert-success">
                            @TempData["Message"]
                        </div>
                    }
                </form>
            </div>
        </div>

