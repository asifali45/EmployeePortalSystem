@model EmployeePortalSystem.Models.Committee
@{
	ViewData["Title"] = "Delete Committee";
	Layout = "~/Views/Shared/EmployeeLayout.cshtml"; 
}
<div class="container">
    <div class="empmaster_card">
        <div class="del_emp">
            <h3>Are you sure you want to delete committee: @Model.Name?</h3>
            <p>This action cannot be undone.</p>

            <div class="employee_deletion">
                <div class="left_del">

                    <form method="post" asp-action="CommitteeDeleteConfirmed" asp-controller="Committee">

                        <input type="hidden" name="cid" value="@Model.CommitteeId" />
                        <button type="submit" class="del_button">Delete</button>
                    </form>
                </div>
                <div class="right_cancel">


                    <form method="get" asp-action="CommitteeDetails" asp-controller="Committee">

                        <button type="submit" class="cancel_button">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
