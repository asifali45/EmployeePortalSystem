@model EmployeePortalSystem.ViewModels.CommitteeMemberViewModel

@{
    ViewData["Title"] = "Delete Committee Member";
    Layout = "~/Views/Shared/EmployeeLayout.cshtml";
    var currentDashboard = HttpContextAccessor.HttpContext.Session.GetString("CurrentDashboard");
}
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<div class="container">
    <div class="empmaster_card">
        <div class="del_emp">
            <h3>Are you sure you want to delete @Model.EmployeeName from this committee?</h3>
            <p>This action cannot be undone.</p>

            <div class="employee_deletion">
                <div class="left_del">

                    <form method="post" asp-action="DeleteCommitteeMemberConfirmed" asp-controller="Committee">

                        <input type="hidden" name="committeeMemberId" value="@Model.CommitteeMemberId" />
                        <input type="hidden" name="committeeId" value="@Model.CommitteeId" />
                        <button type="submit" class="del_button">Delete</button>
                    </form>
                </div>
                <div class="right_cancel">
                    @if (currentDashboard == "Admin")
                    {

                        <form method="get" asp-action="CommitteeMembers" asp-controller="Committee" asp-route-id="@Model.CommitteeId">

                            <button type="submit" class="cancel_button">Cancel</button>
                        </form>
                    }
                    else
                    {
                        <form method="get" asp-action="EmployeeCommitteeMembers" asp-controller="Committee" asp-route-id="@Model.CommitteeId">

                            <button type="submit" class="cancel_button">Cancel</button>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
