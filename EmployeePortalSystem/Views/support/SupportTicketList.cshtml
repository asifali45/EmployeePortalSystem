@model EmployeePortalSystem.ViewModels.SupportTicketViewModel

@{
    ViewData["Title"] = "Support Tickets";
    Layout = "~/Views/Shared/EmployeeLayout.cshtml";
}

<div class="container">
    <div class="page-contents">
        <div class="emp_btn">
            <div class="left_btn">
                <form method="get" asp-action="DashboardAdmin" asp-controller="UserAccess">
                    <button type="submit" class="create_emp_btn">Back</button>
                </form>
            </div>
            <div class="right_btn">
                <form method="get" asp-action="RaiseTicket" asp-controller="SupportTicket">
                    <button type="submit" class="create_emp_btn">Raise Ticket</button>
                </form>

            </div>
        </div>

        <div class="emp_head">
            <h2>Ticket List</h2>
        </div>

        <div class="empmaster_card">
            <table class="table">
                <thead>
                    <tr>
                        <th>Ticket ID</th>
                        <th>Employee</th>
                        <th>Issue</th>
                        <th>Description</th>
                        <th>Status</th>
                        <th>Response</th>
                        <th>Created At</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ticket in Model.TicketList)
                    {
                        <tr>
                            <td>@ticket.TicketId</td>
                            <td>@ticket.EmployeeName</td>
                            <td>@ticket.IssueTitle</td>
                            <td>@ticket.Description</td>
                            <td>@ticket.Status</td>
                            <td>@ticket.Response</td>
                            <td>@ticket.CreatedAt.ToString("dd-MM-yyyy")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
