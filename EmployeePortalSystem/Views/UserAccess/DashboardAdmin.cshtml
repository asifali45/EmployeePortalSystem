@{
    ViewData["Title"] = "Dashboard-Admin";
    Layout = "~/Views/Shared/EmployeeLayout.cshtml";
}
@model EmployeePortalSystem.ViewModels.DashboardCardViewModel


<div class="container">
    <div class="dashboard-contents">

        <div class="policy_card">
            <div class="motor_card_box">
                <div class="motor_text">
                    <h2 style="font-weight: bold; font-size: 20px;">Activity Contribution</h2>
                </div>
                <div class="chart-container">
                    <canvas id="mychart1" style="width:100%; height: 100%;"></canvas>
                </div>
            </div>

            <div class="motor_card_box">
                <h2 style="font-weight: bold; font-size: 20px;">Monthly Activity Trends</h2>
                <div class="chart-container">
                    <canvas id="mychart" style="width:100%; height: 100%;"></canvas>
                </div>
            </div>
        </div>

        <div class="table_card">
            <!-- First Table -->
            <div class="motor_card_box">
                <div class="details">
                    <div class="details-header">
                        <h6>Latest Blogs</h6>
                    </div>
                    <div class="table-responsive">
                        <div class="blog-card">
                            @foreach (var blog in Model.LatestBlogs)
                            {
                                <div class="blog-card-content">
                                    @if (!string.IsNullOrEmpty(blog.Image))
                                    {
                                        <img src="~/uploads/@blog.Image" class="blog-float-image1" alt="Blog Image" />
                                    }

                                    <div class="blog-card-text">
                                        <h3 class="blog-title">@blog.Title</h3>

                                        <p class="blog-description">
                                            @blog.Content.Substring(0, Math.Min(blog.Content.Length, 180))...
                                        </p>

                                        <div class="blog-meta">
                                            <span class="blog-author">By @blog.AuthorName</span>
                                            <span class="blog-tags">on @blog.CreatedAt.ToString("dd MMM yyyy")</span>
                                        </div>
                                    </div>
                                </div>
                                <br /> <hr />

                                <br />
                            }
                            <div class="text-end mt-2">
                                <a href="@Url.Action("BlogDetails", "Blogs")" class="btn btn-secondary btn-sm">View All Blogs</a>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

            <!-- Second Table -->
            <div class="motor_card_box">
                <div class="details">
                    <div class="details-header">
                        <h6>Active Polls</h6>
                    </div>
                    <div class="table-responsive">
                        @* <table class="table" id="table2"> *@
                        @*     <thead> *@
                        @*         <tr> *@
                        @*             <th>Action</th> *@
                        @*             <th>Quotation</th> *@
                        @*             <th>Policy Issue</th> *@
